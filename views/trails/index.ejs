<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to TrailFinder</h1>
            <p>View hiking trails from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/trails/new">Add new hiking trail</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% trails.forEach(function(trail) { %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img id="imgfix" src="<%= trail.image %>">
                    <div class="caption">
                        <h4><%= trail.name %></h4>
                    </div>
                    <p>
                        <a href="/trails/<%= trail._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        
        <% }); %>
    </div>
    <div class="row text-center footer">Created by <a target="_blank" href="http://EyadAlshafi.com">Eyad Alshafi</a></div>

<% include ../partials/footer %>