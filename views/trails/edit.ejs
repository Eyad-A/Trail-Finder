<% include ../partials/header  %>

    <div class="row">
        <h1 style="text-align: center">Edit <%=trail.name%></h1>
        <div style="width: 30%; margin: 25px auto">
        <form action="/trails/<%= trail._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="trail[name]" value="<%=trail.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name = "trail[image]" value="<%=trail.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name = "trail[location]" value="<%=trail.location%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name = "trail[distance]" value="<%= trail.distance %>" min="0.1" step="0.1">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/trails">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>